extends layout

block content
  h2= tweet.text
  p #{tweet.user.name}
    ||
    a(href="https://twitter.com/#{tweet.user.screen_name}") #{"@"+tweet.user.screen_name}
  if(tweet.entities.media)
    img(src="#{tweet.entities.media[0].media_url}")
  p
    a(href="https://twitter.com/#{tweet.user.screen_name}/status/#{tweet.id_str}", class="btn btn-default")
      i(class="fa fa-link")
    a(href="/fave/#{tweet.id_str}", class="btn btn-default")
      i(class="fa fa-star")
    a(href="/rt/#{tweet.id_str}", class="btn btn-default")
      i(class="fa fa-retweet")
